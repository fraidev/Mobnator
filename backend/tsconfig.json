{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      // "@controllers/*": [
      //   "./src/controllers/*"
      // ],
      // "@models/*": [
      //   "./src/models/*"
      // ],
      // "@views/*": [
      //   "./src/views/*"
      // ],
      // "@config/*": [
      //   "./src/config/*"
      // ]
    }
  },
  "include": [
    "src/**/*"
  ],
}